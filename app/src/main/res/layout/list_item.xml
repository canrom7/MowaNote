<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:padding="2dp"
    android:background="@drawable/setsting_list"
    >
    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="20dp"
        android:src="@mipmap/notos"
        android:layout_height="26dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="18dp"
         />
    <TextView
        android:id="@+id/text_title"
        android:text="标题"
        android:textSize="@dimen/list_itemtitleSize"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:textColor="@color/titleColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagelogo"
        android:layout_toRightOf="@+id/imagelogo"
        android:layout_alignRight="@+id/imageView"
       />
    <ImageView
        android:id="@+id/image_type"
        android:src="@mipmap/riji"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_title"
       />
    <TextView
        android:id="@+id/text_content"
        android:text="内容信息"
        android:maxLines="2"
        android:lines="2"
        android:textSize="@dimen/list_iteminfoSize"
        android:textColor="@color/infoColor"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_alignLeft="@+id/imagelogo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
       />
    <TextView
        android:id="@+id/text_date"
        android:text="2016-07-30"
        android:textSize="@dimen/list_itemdateSize"
        android:textColor="@color/infoColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignLeft="@+id/text_content"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:src="@mipmap/nek"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView"
        android:layout_below="@id/text_content"
        android:layout_toLeftOf="@+id/text_noteCity"
        android:layout_toStartOf="@+id/text_noteCity"/>
    <TextView
        android:id="@+id/text_noteCity"
        android:text="北京"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/infoColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/text_content"
        />

</RelativeLayout>