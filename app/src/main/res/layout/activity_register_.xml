<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_register"
    android:paddingRight="@dimen/activity_horizontal_register"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/beijin"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    tools:context="com.example.canrom7.mowa.Register_Activity">
    <TextView
        android:layout_marginTop="30dp"
        android:textSize="26sp"
        android:gravity="center"
        android:text="欢迎注册Mowa"
        android:textStyle="bold"
        android:textColor="@color/mianStyle"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/textTitle_register_logo"
        android:layout_marginBottom="13dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/hint_color"
        android:hint="输入用户名"
        android:textColor="@color/mianStyle"
        android:maxLines="1"
        android:maxLength="10"
        android:drawableLeft="@mipmap/user"
        android:textSize="20sp"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:layout_margin="3dp"
        android:id="@+id/edit_register_nname"
        />
    <EditText
        android:id="@+id/edit_register_pass"
        android:hint="输入登录密码"
        android:textColor="@color/mianStyle"
        android:textColorHint="@color/hint_color"
        android:maxLines="1"
        android:maxLength="12"
        android:inputType="textPassword"
        android:drawableLeft="@mipmap/look"
        android:textSize="20sp"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/edit_register_phone"
        android:hint="输入手机号码"
        android:textColor="@color/mianStyle"
        android:textColorHint="@color/hint_color"
        android:maxLines="1"
        android:maxLength="12"
        android:inputType="phone"
        android:drawableLeft="@mipmap/phone"
        android:textSize="20sp"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <EditText
            android:layout_weight="1"
            android:id="@+id/edit_register_yanzhengma"
            android:textColorHint="@color/hint_color"
            android:background="@drawable/bg_edittext"
            android:hint="点击获取验证码"
            android:textColor="@color/mianStyle"
            android:maxLines="1"
            android:maxLength="12"
            android:inputType="number"
            android:textSize="20sp"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:drawableLeft="@mipmap/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:background="@drawable/login_button"
            android:textColor="@color/nullStyle"
            android:text="获取验证码"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:id="@+id/button_register"
        android:text="注   册"
        android:padding="0dp"
        android:background="@drawable/login_button"
        android:textColor="@color/nullStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
